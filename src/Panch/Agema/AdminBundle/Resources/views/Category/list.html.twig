{% extends '@PanchAgemaAdmin/base.html.twig' %}

{% block body %}
    {% block container %}

        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">{{ page_title }}</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Slug</th>
                            <th>Options</th>
                        </tr>
                    </thead>

                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.categoryName }}</td>
                            <td>{{ category.slug }}</td>
                            <!-- Options menu -->
                            <td align="center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown">
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu pull-right" role="menu">
                                        <li>
                                            <a href=""><span class="glyphicon glyphicon-list"></span> List</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('panch_agema_admin_category_update', {'slug': category.slug}) }}"><span class="glyphicon glyphicon-pencil"></span> Edit</a>
                                        </li>
                                        <li>
                                            <a href="{{ path('panch_agema_admin_category_remove', {'slug': category.slug}) }}">
                                                <span class="glyphicon glyphicon-trash"></span> Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                            <!-- End Options menu -->
                        </tr>
                    {% endfor %}

                </table>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->

    {% endblock container %}
{% endblock body %}
