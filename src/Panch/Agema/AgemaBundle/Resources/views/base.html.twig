<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Default Page Title Homepage{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('bundles/panchagema/css/bootstrap.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('bundles/panchagema/css/default.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
    {% block nav %}
        <nav id="menu" class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('panch_agema_agema_index_index') }}" title="Agema optics &mdash; deep space in your eyes"></a>
                <button type="button" class="navbar-toggle" title="Show menu" data-toggle="collapse" data-target="#collapsed-nav-menu" onclick="toggleBtnControlPanel()">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <a href="{{ path('fos_user_security_logout') }}">
                        <button type="button" class="btn btn-primary navbar-toggle navbar-btn" title="{{ 'layout.logout'|trans({}, 'FOSUserBundle') }}">
                            <span class="glyphicon glyphicon-log-in"></span>
                        </button>
                    </a>
                {% else %}
                    <a href="{{ path('fos_user_security_login') }}">
                        <button type="button" class="btn btn-primary navbar-toggle navbar-btn" title="{{ 'layout.login'|trans({}, 'FOSUserBundle') }}">
                            <span class="glyphicon glyphicon-log-in"></span>
                        </button>
                    </a>
                {% endif %}
            </div>
            <div class="collapse navbar-collapse" id="collapsed-nav-menu">
                <ul class="nav navbar-nav navbar-left">
                    <li class="active">
                        <a href="{{ path('panch_agema_agema_index_index') }}">Homepage</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-left">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Telescopes
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('panch_agema_agema_product_listbycategory', {'slug': 'refractors'}) }}">Refractors</a></li>
                            <li><a href="{{ path('panch_agema_agema_product_listbycategory', {'slug': 'reflectors'}) }}">Reflectors</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a href="{{ path('panch_agema_agema_index_index') }}">Accessories</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a href="{{ path('panch_agema_agema_index_index') }}">Where to buy</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a href="#">Contact us</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a href="{{ path('panch_agema_agema_index_index') }}">About</a>
                    </li>
                </ul>
                    {{ render(controller('PanchAgemaBundle:Index:permissions')) }}
                {% block permissions %}{% endblock permissions %}
            </div>
        </nav>
    {% endblock nav %}
    <div id="site-content">
        {% block container %}{% endblock container%}
        <div id="footer">
            <h2 id="copyright">
                Agema Optics Inc.<br>
                12100 West 52nd Ave. Unit 124 Wheat Ridge, CO 80033.<br><br>
                &copy 2014 &mdash; 2015 IT-PERSONA Lab.<br><br>
            </h2>
        </div>
    </div>

    {% block javascripts %}
        <script src="{{ asset('bundles/panchagema/js/jquery-1.11.1.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/panchagema/js/bootstrap.min.js') }}" type="text/javascript"></script>
    {% endblock %}

</body>
</html>